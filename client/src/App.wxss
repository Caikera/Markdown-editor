* {
  margin: 0;
  padding: 0;
  font-size: 16px;
  box-sizing: border-box;
}
.container {
  width: 100vw;
  min-height: 100vh;
  background-color: #ECEFF4;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.container .content-area {
  width: 60rem;
  height: fit-content;
}
.container .input {
  width: 100%;
  height: 4rem;
  padding: 0 10px;
  outline: none;
  border-radius: 5px;
  border: 1px solid #e7e0e0;
  margin-bottom: 10px;
  font-size: 1.5rem;
  position: relative;
}
.container .input:focus {
  box-shadow: 0 0 2px 2px #62b5ec;
}
.container .btn {
  width: fit-content;
  height: fit-content;
  padding: 10px;
  outline: none;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  text-decoration: none;
  display: block;
}
.container .btn:disabled {
  cursor: default;
  background-color: #c284fc;
  color: #666666;
}
