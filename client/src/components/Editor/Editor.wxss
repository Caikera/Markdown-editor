.shadow-box {
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.1);
}
.input {
  outline: none;
  border: none;
  padding: 5px;
}
.scroll-bar::-webkit-scrollbar {
  width: 5px;
  height: 5px;
  border-radius: 15px;
}
.scroll-bar::-webkit-scrollbar-track {
  border-radius: 15px;
  background-color: transparent;
}
.scroll-bar::-webkit-scrollbar-thumb {
  box-shadow: inset 0 0 3px #72a6e2;
  border-radius: 15px;
  background-color: transparent;
}
.editor-box {
  position: relative;
  width: 85%;
  margin: 0 auto;
}
.editor-box .milkdown {
  width: 100%;
  min-height: 750px;
  overflow: auto;
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.1);
  border-radius: 15px;
}
.editor-box .milkdown .editor {
  max-width: 100%;
}
.editor-box #readonly-btn {
  position: absolute;
  left: 1rem;
  top: 1rem;
}
