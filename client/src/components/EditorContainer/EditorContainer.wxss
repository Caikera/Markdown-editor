.shadow-box {
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.1);
}
.input {
  outline: none;
  border: none;
  padding: 5px;
}
.scroll-bar::-webkit-scrollbar {
  width: 5px;
  height: 5px;
  border-radius: 15px;
}
.scroll-bar::-webkit-scrollbar-track {
  border-radius: 15px;
  background-color: transparent;
}
.scroll-bar::-webkit-scrollbar-thumb {
  box-shadow: inset 0 0 3px #72a6e2;
  border-radius: 15px;
  background-color: transparent;
}
.editor-container {
  transition: all 0.4s ease-in-out;
  flex: 1;
  flex-grow: 1;
  width: 100%;
  overflow: auto;
  max-height: 100vh;
}
.editor-container.collapse {
  margin-left: -300px;
  flex-grow: 1;
}
