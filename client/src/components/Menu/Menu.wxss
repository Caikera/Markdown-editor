.shadow-box {
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.1);
}
.input {
  outline: none;
  border: none;
  padding: 5px;
}
.scroll-bar::-webkit-scrollbar {
  width: 0.5rem;
  height: 0.5rem;
  border-radius: 15px;
}
.scroll-bar::-webkit-scrollbar-track {
  border-radius: 15px;
  background-color: transparent;
}
.scroll-bar::-webkit-scrollbar-thumb {
  box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.5);
  border-radius: 15px;
  background-color: transparent;
}
.menu-container {
  min-width: 200px;
  max-width: 300px;
  height: 100vh;
  padding: 1rem 1rem;
  overflow: auto;
}
.menu-container .content-header {
  font-weight: bold;
  font-size: 2rem;
}
.menu-container .link {
  text-decoration: none;
  display: inline-block;
  cursor: pointer;
}
.menu-container .subject {
  width: 100%;
  height: fit-content;
  color: black;
  border: 1px solid #e6e6e6;
  cursor: pointer;
}
.menu-container .subject .subject-title {
  width: 100%;
  height: 2.5rem;
  line-height: 2.5rem;
  font-weight: bold;
}
.menu-container .subject .sub-children {
  width: 100%;
  height: fit-content;
  padding-left: 0.5rem;
}
.menu-container .file {
  width: 100%;
  height: 2rem;
  padding-left: 0.5rem;
  color: #969191;
  line-height: 2rem;
}
