.shadow-box {
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.1);
}
.input {
  outline: none;
  border: none;
  padding: 5px;
}
.scroll-bar::-webkit-scrollbar {
  width: 5px;
  height: 5px;
  border-radius: 15px;
}
.scroll-bar::-webkit-scrollbar-track {
  border-radius: 15px;
  background-color: transparent;
}
.scroll-bar::-webkit-scrollbar-thumb {
  box-shadow: inset 0 0 3px #72a6e2;
  border-radius: 15px;
  background-color: transparent;
}
.menu-container {
  width: 300px;
  height: 100vh;
  padding: 1rem 1rem;
  overflow: auto;
  transition: all 0.4s ease-in-out;
  transform: translateX(0);
  flex-shrink: 0;
}
.menu-container .content-header {
  font-weight: bold;
  font-size: 2rem;
}
.menu-container .link {
  text-decoration: none;
  display: inline-block;
  cursor: pointer;
}
.menu-container .subject {
  width: 100%;
  height: fit-content;
  color: black;
  border: 1px solid #e6e6e6;
  cursor: pointer;
  position: relative;
}
.menu-container .subject .subject-title {
  width: 100%;
  height: 2.5rem;
  line-height: 2.5rem;
  font-weight: bold;
  background-color: #fff;
  padding-left: 10px;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.menu-container .subject .subject-title .expand-icon {
  transition: all 0.5s ease-in-out;
}
.menu-container .subject .sub-children {
  width: 100%;
  padding-left: 0.5rem;
  transition: all 0.5s ease-in-out;
  transform-origin: 0 0;
}
.menu-container .file {
  width: 100%;
  height: 2rem;
  padding-left: 0.5rem;
  color: #969191;
  line-height: 2rem;
}
.menu-container .file:hover {
  background-color: #e6dddd;
}
.menu-container.collapse {
  transform: translateX(-100%);
  background-color: #fff;
  flex-shrink: 0;
}
